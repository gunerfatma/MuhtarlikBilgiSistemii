@model EntityLayer.Concrete.Mahalle
@{
    ViewBag.Title = "MahalleUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mahalle düzenleme sayfası</h2>

@using (Html.BeginForm("MahalleUpdate", "Mahalle", FormMethod.Post))
{
    <div class="form-group">

        @Html.HiddenFor(x => x.MahalleId)
        @Html.HiddenFor(x => x.MuhtarId)
        <br />
        @Html.Label("Mahalle Adı")
        @Html.TextBoxFor(x => x.MahalleAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MahalleAdi)
        <br />
        @Html.Label("il")
        @Html.TextBoxFor(x => x.il, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.il)
        <br />
        @Html.Label("İlçe")
        @Html.TextBoxFor(x => x.ilce, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ilce)
        <br />
        @Html.Label("Konum")
        @Html.TextBoxFor(x => x.Konum, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Konum)
        <br />
        @Html.Label("Yüz Ölçümü")
        @Html.TextBoxFor(x => x.YuzOlcumu, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.YuzOlcumu)
        <br />
        <button class="btn btn-info"> Güncelle</button>
    </div>
}
