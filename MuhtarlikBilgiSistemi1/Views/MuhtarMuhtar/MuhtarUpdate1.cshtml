        @Html.ValidationMessageFor(x => x.Eposta)
        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sifre)
        <br />
        <button class="btn btn-info"> Güncelle</button>
    </div>
