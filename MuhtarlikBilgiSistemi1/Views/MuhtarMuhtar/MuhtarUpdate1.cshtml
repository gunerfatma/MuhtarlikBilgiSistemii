@model EntityLayer.Concrete.Muhtar
@{
    ViewBag.Title = "UpdateMuhtar";
    Layout = "~/Views/Shared/_MuhtarLayout.cshtml";
}

<br />
<h2>Muhtar düzenleme sayfası</h2>

