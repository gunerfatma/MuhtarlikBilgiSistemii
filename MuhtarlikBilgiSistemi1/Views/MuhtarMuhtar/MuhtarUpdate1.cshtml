        @Html.ValidationMessageFor(x => x.TC)
        <br />
        @Html.Label("Telefon")
        @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TelNo)
        <br />
        @Html.Label("Görsel Linki")
        @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Image)
        <br />
        @Html.Label("Adres")
        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Adres)
        <br />
