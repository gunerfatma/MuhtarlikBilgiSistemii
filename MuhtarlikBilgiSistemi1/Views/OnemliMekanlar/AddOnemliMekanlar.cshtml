@model EntityLayer.Concrete.OnemliMekanlar

@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddOnemliMekanlar", "OnemliMekanlar", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x=>x.OnemliMekanlarId)
        @Html.HiddenFor(x=>x.MahalleId)
        <br/>
        @Html.Label("Adı")
        @Html.TextBoxFor(x => x.Adi)
        @Html.ValidationMessageFor(x => x.Adi)
        <br /><br />
        @Html.Label("Yapı Tipi")
        @Html.TextBoxFor(x => x.YapiTipi)
        @Html.ValidationMessageFor(x => x.YapiTipi)
        <br /><br />
        <button>Kaydet</button>
    </div>
}
